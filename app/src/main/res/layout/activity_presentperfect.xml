<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    tools:context=".presentperfect">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@style/text_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Present perfect" />

            <TextView
                android:id="@+id/description"
                style="@style/text_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="Czasu przesent perfect używamy gdy mówimy o:" />

            <TextView
                android:id="@+id/textView4"
                style="@style/text_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:gravity="start"
                android:text="@string/future_simple_list"
                android:textAlignment="textStart" />

            <TextView
                style="@style/text_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="Tworzenie zdań" />

            <TextView
                style="@style/text_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:gravity="start"
                android:text="@string/future_simple_check"
                android:textAlignment="textStart"
                android:textSize="15dp" />

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp">

                <TableRow android:background="@color/green">

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="lp." />

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="Twierdzenie" />

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="Pytanie" />

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="Przeczenie" />
                </TableRow>


                <TableRow>

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="I" />

                    <TextView
                        android:id="@+id/t_i_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="I have started learning" />

                    <TextView
                        android:id="@+id/p_i_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="have i started learning?" />

                    <TextView
                        android:id="@+id/pr_i_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="I haven`t started learning" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="he/she/it" />

                    <TextView
                        android:id="@+id/t_he_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="He has never traveled by train." />

                    <TextView
                        android:id="@+id/p_he_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="has he never traveled by train?" />

                    <TextView
                        android:id="@+id/pr_he_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="he hasn`t traveled by train." />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="you/we/they" />

                    <TextView
                        android:id="@+id/t_they_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="They have changed their plans. " />

                    <TextView
                        android:id="@+id/p_they_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="have They changed their plans? " />

                    <TextView
                        android:id="@+id/pr_they_presentperfect"
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="They haven`t changed their plans" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/usage5"
                style="@style/text_h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="@string/okreslnik_czasu_present_perfect" />

            <TableLayout
                android:id="@+id/table_o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp">

                <TableRow android:background="@color/green">

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="Angielski" />

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="Tlumaczenie" />

                </TableRow>

                <TableRow>

                    <TextView

                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="just" />

                    <TextView

                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="właśnie" />
                </TableRow>

                <TableRow>


                    <TextView

                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="already" />

                    <TextView

                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="już" />
                </TableRow>

                <TableRow>


                    <TextView

                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="lately" />

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="niedawno" />

                </TableRow>

                <TableRow>


                    <TextView

                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="since" />

                    <TextView
                        style="@style/text_h3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="od (jakiegoś momentu)" />

                </TableRow>


            </TableLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>